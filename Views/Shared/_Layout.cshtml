<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootswatch/yeti/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("css", required: false)
    <title>Burtson-@ViewBag.Title</title>
</head>
<body>
    <div id="sidebar" class="hide-sidebar container-fluid">
        <ul class="nav navbar-default">
            <li><h3 class="sidebar-header">Site</h3></li>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
            <li><h3>Apps</h3></li>
            <li><a asp-controller="AppShowcase" asp-action="TrafficViolation">Traffic Violation Project</a></li>
            <li><a asp-controller="AppShowcase" asp-action="WorkoutPlanner">Workout Planner</a></li>
            <li><a asp-controller="AppShowcase" asp-action="Index">Micro Apps</a></li>
        </ul>
    </div>
    <div id="wrapper" class="hide-sidebar">
        <nav id="topbar" class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header pull-left">
                    <button id="sidebartoggle" class="btn navbar-btn btn-primary">
                        <i class="fa fa-arrow-circle-o-right fa-2x"></i>
                    </button>
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <strong>Burtson&nbsp;</strong>
                    </a>
                    <ul class="nav navbar-nav pull-left">
                        <li id="crumb" class="pull-right active">
                            <span class="navbar-btn text-muted">@ViewBag.Title</span>
                        </li>
                    </ul>
                </div>
                <div class="navbar-header pull-right">
                    <ul class="nav navbar-nav navbar-left"></ul>
                </div>
            </div>
        </nav>
        <!--view content renders here-->
        <div id="main" class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>
