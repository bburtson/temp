@model USTVA.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-7 col-sm-offset-1">
        <div class="row">
            <div class="col-md-10">
                <div class="well well-lg">
                    <form method="post" asp-action="Contact" class="form-horizontal">
                        <fieldset>
                            <legend>@ViewData["Message"]</legend>
                            <div class="form-group">
                                <span asp-validation-summary="ModelOnly"></span>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="control-label" asp-for="Name"></label>
                                    <input class="form-control" asp-for="Name" />
                                    <span class="label label-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="control-label" asp-for="Email"></label>
                                    <input class="form-control" type="email" asp-for="Email" />
                                    <span class="label label-danger" asp-validation-for="Email"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="control-label" asp-for="Message"></label>
                                    <textarea id="textArea" class="input form-control" rows="4" asp-for="Message"></textarea>
                                    <span class="label label-danger" asp-validation-for="Message"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <a class="btn btn-default" asp-controller="Home" asp-action="Index">Cancel</a> 
                                    <input type="submit" value="Send Message" class="btn btn-success" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="well well-lg">
            <address>
                Brett Burtson<br />
                Smithville, MO 64089-8464<br />
                <abbr title="Phone">P:</abbr>
                816.646.5317
            </address>

            <address>
                <strong>Me:</strong> <a href="mailto:brett@burtson.com">Brett@Burtson.com</a><br />
                <strong>Her:</strong> <a href="mailto:christin@burtson.com">Christin@Burtson.com</a>
            </address>
        </div>
    </div>

</div>

